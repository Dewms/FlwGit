<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/medical_card_view"
        android:layout_marginBottom="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#ffffff">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/txt_title_medical"
                android:layout_alignParentTop="true"
                android:textSize="5sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title_medical"
                android:id="@+id/linear_header_price">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:text="Header"
                    android:id="@+id/txt_medical_header"
                    android:layout_below="@+id/txt_title_medical"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:textSize="@dimen/abc_text_size_title_material"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:text="Price"
                    android:id="@+id/txt_medical_price"
                    android:layout_toRightOf="@+id/txt_medical_header"
                    android:layout_below="@+id/txt_title_medical"
                    android:layout_alignParentRight="true"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="24dp"
                    android:layout_above="@+id/txt_medical_details"
                    android:layout_toEndOf="@id/txt_medical_header"
                    android:layout_weight="2"
                    android:layout_gravity="right"
                    android:textSize="@dimen/abc_text_size_title_material"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                android:id="@+id/txt_medical_details"
                android:layout_marginLeft="8dp"
                android:gravity="left"
                android:textAlignment="textStart"
                android:typeface="sans"
                android:layout_below="@+id/linear_header_price"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.FontPath" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>