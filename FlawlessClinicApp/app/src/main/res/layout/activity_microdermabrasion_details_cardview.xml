<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/micro_card_view"
        android:layout_marginBottom="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#ffffff">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/txt_title_body"
                android:layout_alignParentTop="true"
                android:textSize="5sp"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_micro_detailsview"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_micro_services_List"
                android:layout_weight="1"
                android:src="@mipmap/ic_body_services"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/txt_micro_details"
                android:layout_below="@+id/linear_micro_header_price" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:id="@+id/txt_micro_details"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:layout_alignParentRight="true"
                android:layout_alignEnd="@id/txt_body_price"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/img_micro_services_List"
                android:layout_marginLeft="8dp"
                android:layout_below="@+id/linear_micro_header_price" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_micro_header_price">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:text="Header"
                    android:id="@+id/txt_micro_header"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:textSize="@dimen/abc_text_size_title_material"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_below="@+id/txt_title_body"
                    android:layout_alignEnd="@+id/txt_micro_details" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:text="Price"
                    android:id="@+id/txt_micro_price"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:textSize="@dimen/abc_text_size_title_material"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_alignRight="@+id/txt_micro_header"
                    android:layout_alignEnd="@+id/txt_micro_header" />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>