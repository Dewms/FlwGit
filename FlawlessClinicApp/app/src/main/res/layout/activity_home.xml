<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView13"
        android:src="@drawable/img_beauty_beginshere"
        android:adjustViewBounds="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#ffffff"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.FontPath"
        android:text="@string/footer"
        android:id="@+id/textView15"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview_home"
        android:layout_alignWithParentIfMissing="false"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/textView15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:id="@+id/frame_home_promos">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton7"
                    android:src="@drawable/img_home_promos"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:visibility="invisible" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/relative_two_home"
                android:layout_marginBottom="48dp"
                android:layout_marginRight="48dp"
                android:elevation="0dp"
                android:layout_gravity="right">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgbtn_home_products"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_home_products2"
                    android:scaleType="centerCrop"
                    android:background="@drawable/round_button"
                    android:baselineAlignBottom="false"
                    android:layout_marginLeft="8dp"
                    android:textAlignment="center" />

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imgbtn_home_services"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_home_services2"
                        android:scaleType="centerCrop"
                        android:background="@drawable/round_button"
                        android:layout_toRightOf="@+id/imgbtn_home_products"
                    android:layout_marginLeft="8dp"
                    android:textAlignment="center" />

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imgbtn_home_news"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_home_supplements"
                        android:scaleType="centerCrop"
                        android:background="@drawable/round_button"
                        android:layout_toRightOf="@+id/imgbtn_home_services"
                    android:layout_marginLeft="8dp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:text="Products"
                    android:id="@+id/txt_home_products"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentBottom="false"
                    android:layout_alignEnd="@+id/imgbtn_home_products"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/imgbtn_home_products"
                    android:layout_alignStart="@+id/imgbtn_home_products"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:text="Services"
                    android:id="@+id/txt_home_services"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/imgbtn_home_services"
                    android:layout_alignEnd="@id/imgbtn_home_services"
                    android:layout_alignStart="@id/imgbtn_home_services"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:text="News"
                    android:id="@+id/txt_home_news"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignEnd="@+id/imgbtn_home_news"
                    android:layout_below="@+id/imgbtn_home_news"
                    android:layout_alignParentBottom="false"
                    android:textAlignment="center"
                    android:layout_alignStart="@+id/imgbtn_home_news"
                    android:layout_alignParentTop="false"
                    android:textSize="16sp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgbtn_home_lifestyle"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_home_lifestyle2"
                    android:scaleType="centerCrop"
                    android:background="@drawable/round_button"
                    android:baselineAlignBottom="false"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txt_home_products"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:layout_toRightOf="@+id/imgbtn_home_news" />

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imgbtn_home_clinics"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_home_supplements"
                        android:scaleType="centerCrop"
                    android:background="@drawable/round_button"
                        android:baselineAlignBottom="false"
                    android:layout_alignParentBottom="false"
                    android:layout_toRightOf="@+id/imgbtn_home_lifestyle"
                    android:layout_below="@+id/txt_home_services"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center" />

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imgbtn_home_about"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_home_supplements"
                        android:scaleType="centerCrop"
                    android:background="@drawable/round_button"
                        android:baselineAlignBottom="false"
                    android:layout_alignParentBottom="false"
                    android:layout_toRightOf="@+id/imgbtn_home_clinics"
                    android:layout_below="@+id/txt_home_news"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:text="Lifestyle"
                    android:id="@+id/txt_home_lifestyle"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentBottom="false"
                    android:layout_alignEnd="@+id/imgbtn_home_lifestyle"
                    android:layout_alignParentLeft="false"
                    android:layout_below="@+id/imgbtn_home_lifestyle"
                    android:layout_alignStart="@+id/imgbtn_home_lifestyle"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/txt_home_news" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:text="Clinics"
                    android:id="@+id/txt_home_clinics"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/imgbtn_home_clinics"
                    android:layout_alignEnd="@id/imgbtn_home_clinics"
                    android:layout_alignStart="@id/imgbtn_home_clinics"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.FontPath"
                    android:text="About"
                    android:id="@+id/txt_home_about"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignEnd="@+id/imgbtn_home_about"
                    android:layout_below="@+id/imgbtn_home_about"
                    android:layout_alignParentBottom="false"
                    android:textAlignment="center"
                    android:layout_alignStart="@+id/imgbtn_home_about"
                    android:layout_alignParentRight="false"
                    android:layout_toRightOf="@+id/txt_home_clinics"
                    android:textSize="16sp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>