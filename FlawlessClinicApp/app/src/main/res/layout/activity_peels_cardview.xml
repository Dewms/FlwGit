<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/advanced_facials_card_view"
        android:layout_marginBottom="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#ffffff">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_peels_list"
                android:src="@mipmap/ic_body_peels"
                android:scaleType="centerCrop"
                android:layout_alignTop="@+id/txt_peels_details"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt_peels_header" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView9"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:text="Large Text"
                android:id="@+id/txt_title_advanced_facials"
                android:layout_alignParentTop="true"
                android:textSize="5sp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:text="Details"
                android:id="@+id/txt_peels_details"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:gravity="fill_horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/img_peels_list"
                android:layout_below="@+id/txt_peels_header" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:text="Header"
                android:id="@+id/txt_peels_header"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="left"
                android:textSize="@dimen/abc_text_size_title_material"
                android:layout_alignTop="@+id/txt_advanced_facials_price"
                android:layout_toRightOf="@+id/imageView9"
                android:layout_toEndOf="@+id/imageView9"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:text="Price"
                android:id="@+id/txt_peels_price"
                android:layout_gravity="left"
                android:textSize="@dimen/abc_text_size_title_material"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_title_advanced_facials"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>