<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.FontTitle"
        android:text="@string/toolbar_news"
        android:id="@+id/textView11"
        android:layout_margin="8dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/abc_text_size_title_material" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fabric_bg">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_flawless_summer"
                android:id="@+id/imgbtn_news_summer_fun"
                android:adjustViewBounds="true"
                android:background="@android:color/background_light"
                android:scaleType="centerCrop"
                android:layout_margin="8dp"
                android:elevation="10dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_beautyonthego"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_margin="8dp"
                android:elevation="10dp"
                android:id="@+id/imgbtn_news_beautyonthego"
                android:background="@android:color/background_light" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_rejuvelite"
                android:id="@+id/imgbtn_rejuvelite"
                android:scaleType="centerCrop"
                android:elevation="10dp"
                android:background="@color/bgkits"
                android:layout_margin="8dp"
                android:adjustViewBounds="true" />

            <ImageButton
                android:src="@drawable/img_fabfifteen_jodi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgbtn_news_fabfifteen_jodi"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="#ffffff"
                android:elevation="10dp"
                android:layout_margin="8dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_booking_app"
                android:id="@+id/imgbtn_news_booking_app"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_margin="8dp"
                android:elevation="10dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgbtn_news_one"
                android:src="@drawable/img_summerfun"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:scaleType="centerCrop"
                android:layout_margin="8dp"
                android:elevation="10dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgbtn_news_two"
                android:src="@drawable/img_beauty_date"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:scaleType="centerCrop"
                android:layout_margin="8dp"
                android:elevation="10dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgbtn_news_three"
                android:src="@drawable/img_luckycharm"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:scaleType="centerCrop"
                android:layout_margin="8dp"
                android:elevation="10dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgbtn_news_four"
                android:src="@drawable/img_iskinmaxene"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:scaleType="centerCrop"
                android:layout_margin="8dp"
                android:elevation="10dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>