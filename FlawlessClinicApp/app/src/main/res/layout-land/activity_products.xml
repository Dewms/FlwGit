<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.FontTitle"
        android:text="Individual Products"
        android:id="@+id/textView14"
        android:layout_margin="8dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/abc_text_size_title_material" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:name="com.flwapp.jumernicerio.flawlessclinicapp.products.FragmentProductsList"
            android:id="@+id/fragment"
            android:layout_gravity="left|center_vertical"
            />

        <fragment
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:name="com.flwapp.jumernicerio.flawlessclinicapp.products.FragmentProductsDesc"
            android:id="@+id/fragment2"
            android:layout_gravity="center_vertical|right"
            />
    </LinearLayout>

</LinearLayout>